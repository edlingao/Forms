<h1>New User</h1>

<%= form_for @user do |u|%>
  <%= u.label :username %>
  <%= u.text_field :username, placeholder: "User Name" %>
  <%= u.label :email %>
  <%= u.email_field :email, placeholder: "Email" %>
  <%= u.label :password %>
  <%= u.password_field :password, placeholder: "Password" %>
  <%= u.submit %>
<% end %>

